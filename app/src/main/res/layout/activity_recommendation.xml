<!-- activity_recommendation.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- TextView to display skin products -->
    <TextView
        android:id="@+id/skinProductsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dot and key"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ListView to display skin products -->
    <ListView
        android:id="@+id/skinProductsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinProductsTextView"
        android:layout_marginTop="8dp" />

    <!-- TextView to display hair products -->
    <TextView
        android:id="@+id/hairProductsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/skinProductsListView"
        android:layout_marginTop="16dp"
        android:text="Anamoly"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- ListView to display hair products -->
    <ListView
        android:id="@+id/hairProductsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hairProductsTextView"
        android:layout_marginTop="8dp" />

    <!-- TextView to display recommendation -->
    <TextView
        android:id="@+id/recommendationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hairProductsListView"
        android:layout_marginTop="16dp"
        android:text="@string/recommendation_label"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- TextView to display recommended product -->
    <TextView
        android:id="@+id/recommendedProductTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendationTextView"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
